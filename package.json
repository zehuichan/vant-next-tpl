    "pinia": "^2.0.0-rc.15",
    "vant": "^3.2.6",
    "vue": "^3.2.20",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.6.0",
    "@vitejs/plugin-vue-jsx": "^1.2.0",
    "@vue/compiler-sfc": "^3.2.20",
    "autoprefixer": "^10.3.7",
    "less": "^4.1.2",
    "postcss": "^8.3.11",
    "postcss-px-to-viewport": "^1.1.1",
    "release-it": "^14.11.6",
    "vite": "^2.6.12",
    "vite-plugin-compression": "^0.3.5",
    "vite-plugin-html": "^2.1.1"
